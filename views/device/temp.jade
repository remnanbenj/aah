extends device

block devicetitle
  .device-icon(style="background-image: url('/images/TEMP-icon.png');")
  .device-name #{device.name}
  .device-reading 
    .div #{device.lastreadingdata} °C
    .div(style="font-size: 11px;") #{device.lastreading}

block scriptdata
  script(type="text/javascript").
    var data = JSON.parse('#{JSON.stringify(data)}'.replace(/&quot;/g, '"'));
    var readings =  [['Time', 'Temperature']];
    for(var i = 0; i < data.length; i++) {
      var date = new Date(data[i].receivedtime);
      readings.push([date, Number(data[i].data)]);
    }

    var options = {
          legend: 'none',
          colors: ['#00aaff'],
          chartArea: {left: 50, top: 15, 'width': '90%', 'height': '88%'},
          hAxis: { 
            format: format,
            gridlines: { count: hAxisCount, color:"#ccc" },
            viewWindow: {
                    min: startDate,
                    max: endDate
            }
          },
          vAxis: { 
            gridlines: { count: 7, color:"#ccc" },
            viewWindow: {
                    min: -10,
                    max: 40
            },
            format: '#°C' 
          }
    };

    google.charts.load('current', {'packages':['corechart']});
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
        var data = google.visualization.arrayToDataTable(readings);
        var chart = new google.visualization.AreaChart(document.getElementById('chart'));
        chart.draw(data, options);
    }
